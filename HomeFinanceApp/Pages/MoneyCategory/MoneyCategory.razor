@page "/moneycategory"
@inherits PageMoneyCategory
<h1>Money category</h1>

@if (McList == null)
{
    <p><em>Loading...</em></p> }
else
{
    <div>
        <br />
        <button class="btn-sm btn-success" @onclick="@(() => AddMoneyCategory())">
            <span class="oi oi-plus" aria-hidden="true"></span>
        </button>
    </div>
    <div class="table-responsive-sm">
        <table class="table table-sm table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th>Description</th>
                    <th class="text-center">Type</th>
                    <th class="text-left">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in McList)
                {
                    <tr>
                        <th></th>
                        <td>@item.Description</td>
                        <td class="text-center">
                            @{ var iconToUse = "";
                                var classToUse = "";

                                if (item.TypeId == 1)
                                {
                                    iconToUse = "arrow-thick-top";
                                    classToUse = "text-success";
                                }
                                else
                                {
                                    iconToUse = "arrow-thick-bottom";
                                    classToUse = "text-danger";
                                }
                            }
                            <span class="oi oi-@iconToUse @classToUse" aria-hidden="true" title="Fixed"></span>
                        </td>
                        <td>
                            <button class="btn btn-danger" @onclick="@(()=>Delete(item.ID))"><span class="oi oi-trash" aria-hidden="true"></span></button>
                            <button class="btn btn-success" @onclick="@(() => Edit(item.ID))"><span class="oi oi-pencil" aria-hidden="true"></span></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}