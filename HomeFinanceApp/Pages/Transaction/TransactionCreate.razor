@page "/TransactionCreate"
@inherits TransactionCreatePage

<h3>Create transaction</h3>
<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Amount" class="control-label">Amount</label>
                <input form="Amount" class="form-control" @bind="@tm.Amount" />
            </div>
            <div class="form-group">
                <label for="Description" class="control-label">Description</label>
                <input form="Name" class="form-control" @bind="@tm.Description" />
            </div>
            <div class="form-group">
                <label for="Type" class="control-label">Type</label>
                <select @bind="@tm.CategoryId" class="form-control">
                    <option value="">----Select Type---</option>
                    @if (@McList != null)
                    {
                        @foreach (var item in McList)
                        {
                            <option value="@item.ID">@item.Description</option>
                        }
                    }
                </select>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateTransaction" value="Save" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>